{
  "compilerOptions": {
    "target": "ES6",
    "allowJs": true,
    "module": "commonjs",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strict": true,
    "paths": {
      "BridgeHelper": ["./src/BridgeHelper"],
			"@/src/*"     : ["./src/*"],
			"@/*"         : ["./*"],
			"@"           : ["./src/index"],
      "*": ["node_modules/*"],
    },
    "jsx": "react-jsx"
  },
  "include": ["src/**/*"]
}
